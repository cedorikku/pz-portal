[Unit]
Description=PZ Server API with node.js
Documentation=https://github.com/cedorikku/pz-manager
After=network.target

[Service]
WorkingDirectory=<project-directory>
Environment=PORT=9000
Environment=COMPOSE_FILE=<file>
Environment=CONTAINER_NAME=projectzomboid
Environment=RCON_PASSWORD=<your-password>
Type=simple
User=<user>
ExecStart=<your-node-install-in-bin> backend/dist/index.js
Restart=on-failure

[Install]
WantedBy=multi-user.target
